<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="PJ.NavigationTrans.Sample.MainPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Background="Blue">

	<ScrollView>
		<VerticalStackLayout Padding="30,0" Spacing="25">
			<Button Clicked="Button_Clicked" Text="Navigate to Page 1" />
			<Button Clicked="Button_Clicked_1" Text="Navigate to Page 2" />

			<ContentView HeightRequest="30" />

			<Button Clicked="Button_Clicked_2" Text="Navigate to Page 1 keeping the stack" />

			<Button Clicked="Button_Clicked_3" Text="Navigate to Page 2 keeping the stack" />
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
